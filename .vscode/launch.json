{
  "version": "0.2.0",
  "configurations": [
    {
        "name": ".NET Backend (Manual)",
        "type": "coreclr",
        "request": "launch",
        "preLaunchTask": "build",
        "program": "${workspaceFolder}/HockeyStatTracker.Api/bin/Debug/net9.0/HockeyStatTracker.Api.dll",
        "args": [],
        "cwd": "${workspaceFolder}/HockeyStatTracker.Api",
        "stopAtEntry": false,
        "serverReadyAction": {
            "action": "openExternally",
            "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
        },
        "env": {
            "ASPNETCORE_ENVIRONMENT": "Development"
        },
        "sourceFileMap": {
            "/Views": "${workspaceFolder}/Views"
        }
    },
    {
      "name": "React Frontend (Chrome)",
      "type": "msedge", 
      "request": "launch",
      "url": "http://localhost:5173",
      "webRoot": "${workspaceFolder}/HockeyStatTracker.Ui"
    }
  ],
  "compounds": [
    {
      "name": "Full App (API + UI)",
      "configurations": [".NET Backend", "React Frontend (Chrome)"]
    }
  ]
}